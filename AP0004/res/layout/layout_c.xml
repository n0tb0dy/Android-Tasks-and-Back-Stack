<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b8fa99"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivityC" >

    <Button
        android:id="@+id/buttonStartD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="onClickStartD"
        android:text="Start Activity D" />

    <TextView
        android:id="@+id/textStateActC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonStartD"
        android:layout_below="@+id/buttonStartD"
        android:layout_marginTop="14dp"
        android:background="#fffcfc"
        android:text="Этот экземпляр АсtivityC запущен в первый раз" />

    <TextView
        android:id="@+id/textActCountC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textStateActC"
        android:layout_below="@+id/textStateActC"
        android:layout_marginTop="18dp"
        android:background="#fffcfc"
        android:text="TextView" />

    <Button
        android:id="@+id/buttonInfoC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonStartD"
        android:layout_toRightOf="@+id/buttonStartD"
        android:onClick="onInfoClick"
        android:text="Info" />

    <Button
        android:id="@+id/buttonStartDCT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textActCountC"
        android:layout_below="@+id/textActCountC"
        android:layout_marginTop="14dp"
        android:onClick="onClickStartDTOP"
        android:text="Start Act D CLEAR TOP" />

    <Button
        android:id="@+id/buttonStartEAP0003"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonStartDCT"
        android:layout_below="@+id/buttonStartDCT"
        android:onClick="onClickStartE0003"
        android:text="Start E AP0003" />

    <Button
        android:id="@+id/buttonStartDNT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonStartEAP0003"
        android:layout_below="@+id/buttonStartEAP0003"
        android:onClick="onClickStartDNT"
        android:text="Start D NewTask" />

    <Button
        android:id="@+id/buttonStartLAP0003"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonStartDNT"
        android:layout_below="@+id/buttonStartDNT"
        android:onClick="onClickStartL0003"
        android:text="Start L AP0003 NewTask" />

    <Button
        android:id="@+id/buttonStartDMT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonStartLAP0003"
        android:layout_below="@+id/buttonStartLAP0003"
        android:onClick="onClickStartDMT"
        android:text="Start D MULTIPLE_TASK" />

    <Button
        android:id="@+id/buttonStartDPIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonStartLAP0003"
        android:layout_toRightOf="@+id/buttonStartDNT"
        android:onClick="onClickStartDPIT"
        android:text="D PrevIsTop" />

    <Button
        android:id="@+id/buttonStartDRTIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonStartDNT"
        android:layout_toRightOf="@+id/buttonStartDNT"
        android:onClick="onClickStartDRTIN"
        android:text="D ResetTask" />

</RelativeLayout>