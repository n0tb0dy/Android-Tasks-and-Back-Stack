<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ff208"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivityC" >

    <Button
        android:id="@+id/buttonStartD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="onClickStartD"
        android:text="Start Activity D" />

    <TextView
        android:id="@+id/textStateActC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonStartD"
        android:layout_below="@+id/buttonStartD"
        android:layout_marginTop="14dp"
        android:background="#fffcfc"
        android:text="Этот экземпляр АсtivityC запущен в первый раз" />

    <TextView
        android:id="@+id/textActCountC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textStateActC"
        android:layout_below="@+id/textStateActC"
        android:layout_marginTop="18dp"
        android:background="#fffcfc"
        android:text="TextView" />

    <Button
        android:id="@+id/buttonInfoC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonStartD"
        android:layout_toRightOf="@+id/buttonStartD"
        android:onClick="onInfoClick"
        android:text="Info" />

    <EditText
        android:id="@+id/editTextC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textActCountC"
        android:layout_below="@+id/textActCountC"
        android:layout_marginTop="16dp"
        android:background="#fffcfc"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonStartBfr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextC"
        android:layout_centerVertical="true"
        android:onClick="onClickStartBrf"
        android:text="Start Act B Reorder to Front" />

    <Button
        android:id="@+id/buttonStartBrAP0004"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonStartBfr"
        android:layout_below="@+id/buttonStartBfr"
        android:onClick="onClickStartBr0004"
        android:text="Start Activity B AP0004 CLEAR_WHEN_TASK_RESET" />

    <Button
        android:id="@+id/buttonStartDAP0004MT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonStartBrAP0004"
        android:layout_below="@+id/buttonStartBrAP0004"
        android:onClick="onClickStartDMT0004"
        android:text="Sart Activity D AP0004 MULTIPLE_TASK" />

    <Button
        android:id="@+id/buttonStartDAP0004RTIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonStartDAP0004MT"
        android:layout_below="@+id/buttonStartDAP0004MT"
        android:onClick="onClickStartDRTIN0004"
        android:text="Start D AP004 ResetTaskIfNeed" />

</RelativeLayout>